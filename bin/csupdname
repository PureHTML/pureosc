#!/bin/bash
. ./dbconnect.sh
if [[ ! $1 || ! $2 ]];then
	echo 'Usage: use csupdname to find id next: ./cssupdname $1=id (eq 2, required) $2=name (body > center)'
	exit
fi

#if [[ ! $9 ]];then STATUS=1;fi
#[[ $4 ]] && CD="$4" || CD=$1
#[[ $5 ]] && GID="$5" || GID=1
#[[ $6 ]] && ORD="$5" || ORD=9999

mariadb -h${H} -u${U} -p${P} $D -e "update css set name='${2}' where id='${1}'"
  ./csscompiler.php  
